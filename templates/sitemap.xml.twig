<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% if page.parent %}
    {% include 'sitemap/_url.xml.twig' with { page: page.parent, priority: 0.9 } %}
  {% endif %}
  {% for child in page.root %}
    {% include 'sitemap/_url.xml.twig' with { page: child } %}
    {% if child.children %}
      {% include 'sitemap/_children.xml.twig' with { page: child } %}
    {% endif %}
  {% endfor %}
</urlset>
