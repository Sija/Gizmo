{
    "name":         "gizmo/gizmo",
    "description":  "Flexible, file based micro-CMS",
    "homepage":     "http://gizmocms.com",
    "license":      "MIT",
    "keywords":     ["microcms", "cms", "yaml"],
    "authors": [
        {
            "name":     "Sijawusz Pur Rahnama",
            "email":    "sija@sija.pl",
            "homepage": "http://sija.pl/"
        }
    ],
    "config": {
        "process-timeout": 600
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git://github.com/Sija/markdown.git"
        },
        {
            "type": "vcs",
            "url": "git://github.com/Sija/smartypants.git"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php":                      ">=5.3.2",
        "twig/twig":                "1.*",
        "twig/extensions":          "dev-master",
        "symfony/twig-bridge":      "2.2.*",
        "symfony/yaml":             "2.2.*",
        "symfony/finder":           "2.2.*",
        "silex/silex":              "1.0.*",
        "sija/markdown":            "dev-master",
        "sija/smartypants":         "dev-master",
        "imagine/imagine":          "dev-master",
        "swiftmailer/swiftmailer":  "dev-master"
    },
    "autoload": {
        "psr-0": {
            "Gizmo": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
